{
  "name": "daemux",
  "version": "0.5.2",
  "description": "Universal Autonomous Agent Platform",
  "type": "module",
  "workspaces": ["packages/*"],
  "main": "dist/index.js",
  "bin": {
    "daemux": "./src/cli/index.ts"
  },
  "scripts": {
    "prebuild": "bun run lint && bun run typecheck && bun run test",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && bun build ./src/cli/index.ts --outdir ./dist/cli --target bun",
    "dev": "bun run --watch src/cli/index.ts",
    "test": "bun test",
    "lint": "oxlint src/ packages/",
    "typecheck": "tsc --noEmit",
    "compile": "bun build --compile --outfile=dist/daemux ./src/cli/index.ts",
    "setup": "./scripts/setup.sh",
    "postinstall": "./scripts/setup.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@daemux/mcp-client": "workspace:*",
    "@daemux/service": "workspace:*",
    "@daemux/types": "workspace:*",
    "@daemux/updater": "workspace:*",
    "commander": "^14.0.0",
    "sqlite-vec": "^0.1.6",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "oxlint": "^0.15.0",
    "typescript": "^5.9.0"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "keywords": [
    "agent",
    "autonomous",
    "claude",
    "ai",
    "platform"
  ],
  "author": "",
  "license": "MIT"
}
